@using StaticResource;

@{
    var user = (DemoDoan.ViewModel.UserVM)Session["ACCOUNT"]; /*lay ra ten user tu phien dang nhap session*/
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="description" content="Vali is a responsive and free admin theme built with Bootstrap 4, SASS and PUG.js. It's fully customizable and modular.">
    <!-- Twitter meta-->
    @*<meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:site" content="@pratikborsadiya">
        <meta property="twitter:creator" content="@pratikborsadiya">*@
    <!-- Open Graph Meta-->
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Vali Admin">
    <meta property="og:title" content="Vali - Free Bootstrap 4 admin theme">
    <meta property="og:url" content="http://pratikborsadiya.in/blog/vali-admin">
    <meta property="og:image" content="http://pratikborsadiya.in/blog/vali-admin/hero-social.png">
    <meta property="og:description" content="Vali is a responsive and free admin theme built with Bootstrap 4, SASS and PUG.js. It's fully customizable and modular.">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="~/htmls/css/main.css">

    <!-- Font-icon css-->
    <link href="~/htmls/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link href="~/Content/pretty-checkbox.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
</head>
<body class="app sidebar-mini rtl pace-done sidenav-toggled">
    <!-- Navbar-->
    <header class="app-header">
        <a class="app-header__logo" href="/Records/Index">Document Tracking System</a>
        @*Slidebar toggle button*@
        <a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
        <!-- Navbar Right Menu-->
        <ul class="app-nav">
            <!--Notification Menu-->
            @*<li class="dropdown">
                    <a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Show notifications"><i class="fa fa-bell-o fa-lg"></i></a>
                    <ul class="app-notification dropdown-menu dropdown-menu-right">
                        <li class="app-notification__title">You have 4 new notifications.</li>
                        <li class="app-notification__footer"><a href="#">See all notifications.</a></li>
                    </ul>
                </li>*@
            <!-- User Menu-->
            @*Session[DemoDoan.ViewModel.UserVM.CurrentCulture]*@
            <li>
                @using (Html.BeginForm("ChangeCulture", "Base"))
                {
                    @Html.Hidden("returnUrl", Request.RawUrl)
                    @Html.DropDownList("ddCulture", new SelectList(new[]
               {
                   new {value="en", text=StaticResource.Resource.English},
                   new {value="vi", text=StaticResource.Resource.Vietnamese},
               }, "value", "text", Session[DemoDoan.ViewModel.UserVM.CurrentCulture]), new { onchange = "this.form.submit();" })
                }


            </li>
            <li class="dropdown">
                <a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Open Profile Menu">
                    <i class="fa fa-user fa-lg"></i>
                    @*lay ra  ten user tu phien dang nhap session*@
                    <span class="titleUser">@user.Username</span>
                </a>
                <ul class="dropdown-menu settings-menu dropdown-menu-right">
                    <li><a class="dropdown-item" href="/Login/Logout"><i class="fa fa-sign-out"></i> Logout</a></li>
                </ul>
            </li>
        </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        @if (user.RoleID == 1)
        {
            <div class="app-sidebar__user">
                @*<img class="app-sidebar__user-avatar" src="https://s3.amazonaws.com/uifaces/faces/twitter/jsa/48.jpg" alt="User Image">*@
                <div>
                    @*<p class="app-sidebar__user-name">John Doe</p>
                        <p class="app-sidebar__user-designation">Frontend Developer</p>*@
                </div>
            </div>

            <ul class="app-menu">
                <li>
                    <a class="app-menu__item" href="/UserAccounts/Index"><i class="app-menu__icon fa fa-users"></i><span class="app-menu__label">UserAccounts</span></a>
                </li>
                <li class="treeview">
                    <a class="app-menu__item" href="/Languages"><i class="app-menu__icon fa fa-language"></i><span class="app-menu__label">Languages</span><i class="treeview-indicator"></i></a>
                </li>
                <li class="treeview">
                    <a class="app-menu__item" href="/Teams/Index"><i class="app-menu__icon fa fa-object-group"></i><span class="app-menu__label">Teams</span><i class="treeview-indicator"></i></a>
                </li>
                <li><a class="app-menu__item" href="/Categories/Index"><i class="app-menu__icon fa fa-pie-chart"></i><span class="app-menu__label">Categories</span></a></li>
                <li class="treeview">
                    <a class="app-menu__item" href="/SubCategories/Index"><i class="app-menu__icon fa fa-bar-chart"></i><span class="app-menu__label">SubCategories</span><i class="treeview-indicator"></i></a>
                </li>
                <li class="treeview">
                    <a class="app-menu__item" href="/Status/Index"><i class="app-menu__icon fa fa-th-list"></i><span class="app-menu__label">Status</span><i class="treeview-indicator"></i></a>
                </li>
                <li class="treeview">
                    <a class="app-menu__item" href="/Locations/Index"><i class="app-menu__icon fa fa-feed"></i><span class="app-menu__label">Locations</span><i class="treeview-indicato"></i></a>
                </li>
                <li class="treeview">
                    <a class="app-menu__item" href="/Departments/Index"><i class="fa fa-plus"></i><span class="app-menu__label">Departments</span><i class="treeview-indicato"></i></a>
                </li>
                <li class="treeview">
                    <a class="app-menu__item" href="/ColorCodes/Index"><i class="fa fa-contao"></i><span class="app-menu__label">Color Code</span><i class="treeview-indicato"></i></a>
                </li>
            </ul>

        }
        else
        {
            <div class="app-sidebar__user">
                <div>
                </div>
            </div>
            <ul class="app-menu">
                <li><a class="app-menu__item" href="/Records/Index"><i class="app-menu__icon fa fa-dashboard"></i><span class="app-menu__label">Records</span></a></li>
            </ul>
        }

    </aside>
    @*<main class="app-content">*@
    <main class="app-content">
        @RenderBody()
    </main>
    <!-- Essential javascripts for application to work-->
    <script src="~/htmls/js/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/Plugins/jquery.twbsPagination.js"></script>
    <script src="~/Content/plugins/sweetalert/sweetalert2@8.js"></script>

    @* my javascript *@
    <script src="~/Content/commons/commons.js"></script>
    <script src="~/Scripts/Plugins/mustache.js"></script>
    <script src="~/Scripts/Plugins/translate.js"></script>
    <script src="~/htmls/js/popper.min.js"></script>
    <script src="~/htmls/js/bootstrap.min.js"></script>
    <script src="~/htmls/js/main.js"></script>

    <!-- The javascript plugin to display page loading on top-->
    <script src="~/htmls/js/plugins/pace.min.js"></script>
    <!-- Page specific javascripts-->
    <!-- Google analytics script-->
    <script type="text/javascript">
        if (document.location.hostname == 'pratikborsadiya.in') {
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-72504830-1', 'auto');
            ga('send', 'pageview');
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>