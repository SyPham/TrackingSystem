@model DemoDoan.Models.Location

@{
    ViewBag.Title = "Create";
    var departments = (IEnumerable<DemoDoan.Models.Department>)ViewBag.Department;
    var teams = (IEnumerable<DemoDoan.Models.Team>)ViewBag.Team;
    var langs = (IEnumerable<DemoDoan.Models.Language>)ViewBag.Language;

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <h2>@StaticResource.Resource.UserAccounts_CreateNew</h2>

            <h4>Location</h4>
        </div>
        <div class="col-lg-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Content)
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                @Html.LabelFor(model => model.LanguageID, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.LanguageID, new SelectList(langs, "LanguageID", "Name"), "- Please Select -", new { @class = "form-control", @id = "LanguageID" })
                @Html.ValidationMessageFor(model => model.LanguageID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <input type="submit" StaticResource.Resource.General_Create class="btn btn-default" />
            </div>
        </div>
        <div class="col-lg-12">

            @Html.ActionLink(StaticResource.Resource.General_BackToList,"Index", null, htmlAttributes: new { @class = "btn btn-primary btn-sm" })

        </div>
    </div>
}

